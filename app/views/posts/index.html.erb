
<p id="notice"><%= notice %></p>

<body style="background-color:aquamarine ;">

<h1>The Diaries of Travel</h1>

<table style="width:100%">
  <thead>
    <tr>
	  <th>User Email</th>
      <th>Title</th>
      <th>Content</th>
	  <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
	    <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
		<td><%= post.category %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if post.user.id == current_user.id %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

